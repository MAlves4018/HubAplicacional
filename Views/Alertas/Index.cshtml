@model IEnumerable<WebApp.Models.ApplicationModels.Alertas>

@{
    ViewData["Title"] = "Index";
}


<h1>Alertas</h1>
<hr />
<p>
    <a class="btn btn-success" asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CabecalhoAviso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextoAviso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAlteracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CabecalhoAviso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextoAviso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAlteracao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen-square fa-2x"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye fa-2x"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-times-circle fa-2x"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
