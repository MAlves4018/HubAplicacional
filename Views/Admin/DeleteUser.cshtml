@model WebApp.Models.UserViewModel

@{
    var pageId = "dlg-cont-user";
    if (!ViewData.TryGetValue("useLayout", out var useLayout) || useLayout.Equals(false) )
    {
        Layout = null;
    }
    else
    {
        ViewData["ActivePage"] = "ViewUser";
        Layout = "_LayoutUser";
        pageId = "dlg-cont-user-p";
    }
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Admin" asp-action="DeleteUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            
            <div class="form-group">

                <div class="alert alert-danger text-dark">
                    <p>
                        <strong>Quer apagar o utilizador:</strong>
                    </p>
                    <p>
                        <strong class="text-yellow">@Model.UserName - @Model.Email ?</strong>
                    </p>
                </div>
            </div>

            <div class="form-group form-btns">
                <input class="btn btn-danger confirm-action" confirm-action-msg="Quer mesmo apagar o utilizador @Model.UserName ?" type="submit" value="Apagar"/>
            </div>
        </form>
    </div>
</div>
