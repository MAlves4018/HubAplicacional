@model WebApp.Models.RoleViewModel

@{
    var pageId = "dlg-cont-user";
    if (!ViewData.TryGetValue("useLayout", out var useLayout) || useLayout.Equals(false))
    {
        Layout = null;
    }
    else
    {
        ViewData["ActivePage"] = "DeleteRole";
        Layout = "_LayoutRole";
        pageId = "dlg-cont-user-p";
    }
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">

                <div class="alert alert-danger">
                    <p>
                        <strong>Quer apagar o Perfil @Model.Name?</strong>
                    </p>
                </div>
             

            </div>

            <div class="form-group form-btns">
                <input class="btn btn-danger confirm-action" confirm-action-msg="Quer mesmo apagar o Perfil @Model.Name ?" type="submit" value="Apagar"/>
            </div>
        </form>
    </div>
</div>
